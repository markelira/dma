rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             (request.auth.token.role == 'admin' ||
              request.auth.token.email.matches('.*@dma\\.hu$'));
    }

    // Course content (videos, materials)
    match /courses/{courseId}/{allPaths=**} {
      // Public read access for course content
      allow read: if true;

      // Only admins can write/upload course content
      allow write: if isAdmin() &&
                      request.resource.size < 500 * 1024 * 1024; // 500MB limit for videos
    }

    // Course lessons subfolder
    match /courses/{courseId}/lessons/{lessonId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() &&
                      request.resource.size < 500 * 1024 * 1024;
    }

    // User profile pictures
    match /users/{userId}/profile/{fileName} {
      // Anyone can read profile pictures
      allow read: if true;

      // Only the user themselves can upload/update their profile picture
      allow write: if request.auth != null &&
                      request.auth.uid == userId &&
                      request.resource.size < 5 * 1024 * 1024 && // 5MB limit
                      request.resource.contentType.matches('image/.*');
    }

    // Temporary uploads (for processing before moving to final location)
    match /temp/{userId}/{fileName} {
      // Only the uploader can read their temp files
      allow read: if request.auth != null && request.auth.uid == userId;

      // Only the user can upload to their temp folder
      allow write: if request.auth != null &&
                      request.auth.uid == userId &&
                      request.resource.size < 2 * 1024 * 1024 * 1024; // 2GB limit for temp uploads
    }

    // Default: deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
